{
  "name": "cursortoolset",
  "displayName": "Cursor 工具集管理器",
  "version": "1.0.0",
  "description": "一个类似 Homebrew 的工具集管理器，专门为 Cursor IDE 设计，用于管理和安装各种 AI 辅助工具集",
  "author": "firoyang",
  "license": "MIT",
  
  "keywords": [
    "cursor",
    "toolset",
    "ai-tools",
    "package-manager",
    "cli"
  ],
  
  "compatibility": {
    "project_types": [
      "any"
    ],
    "platforms": [
      "windows",
      "macos",
      "linux"
    ]
  },
  
  "requirements": {
    "tools": []
  },
  
  "install": {
    "targets": {}
  },
  
  "features": [
    {
      "id": "toolset-manager",
      "name": "工具集管理",
      "description": "管理和安装 Cursor 工具集",
      "files": ["cmd/*.go", "pkg/**/*.go"],
      "essential": true
    },
    {
      "id": "version-control",
      "name": "版本控制",
      "description": "智能版本管理和更新",
      "files": ["pkg/version/**/*.go"],
      "essential": true
    },
    {
      "id": "one-click-install",
      "name": "一键安装",
      "description": "跨平台一键安装脚本",
      "files": ["install.sh", "install.ps1"],
      "essential": true
    }
  ],
  
  "scripts": {
    "build": "go build -o cursortoolset .",
    "test": "go test ./...",
    "install": "go install ."
  },
  
  "documentation": {
    "quickstart": "README.md",
    "installation": "INSTALL_GUIDE.md",
    "architecture": "ARCHITECTURE.md",
    "changelog": "CHANGELOG.md"
  },
  
  "repository": {
    "type": "git",
    "url": "https://github.com/shichao402/CursorToolset.git"
  },
  
  "metadata": {
    "created": "2024-12-04",
    "updated": "2024-12-04",
    "toolset_version": "1.0.0",
    "schema_version": "1.0.0"
  }
}

